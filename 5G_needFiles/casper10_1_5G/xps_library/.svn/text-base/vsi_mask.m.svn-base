myname = gcb;
%set_param(myname, 'LinkStatus', 'inactive');


set_param([myname,'/convert_bs'],'arith_type', get_param(myname,'arith_type'));
set_param([myname,'/convert_bs'],'n_bits', '32');
set_param([myname,'/convert_bs'],'bin_pt', num2str(get_param(myname,'bin_pt')));

gateway_outs =find_system(gcb,'searchdepth',1,'FollowLinks', 'on','lookundermasks','all','masktype','Xilinx Gateway Out Block');
for i =1:length(gateway_outs)
    gw = gateway_outs{i};
    if regexp(get_param(gw,'Name'),'(bs)$')
        toks = regexp(get_param(gw,'Name'),'(bs)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(clock)$')
        toks = regexp(get_param(gw,'Name'),'(clock)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(onepps)$')
        toks = regexp(get_param(gw,'Name'),'(onepps)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(pvalid)$')
        toks = regexp(get_param(gw,'Name'),'(pvalid)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(pctrl)$')
        toks = regexp(get_param(gw,'Name'),'(pctrl)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(pdata)$')
        toks = regexp(get_param(gw,'Name'),'(pdata)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(pspare1)$')
        toks = regexp(get_param(gw,'Name'),'(pspare1)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    elseif regexp(get_param(gw,'Name'),'(pspare2)$')
        toks = regexp(get_param(gw,'Name'),'(pspare2)$','tokens');
        set_param(gw,'Name',clear_name([gcb,'_',toks{1}{1}]));
    else
        error(['Unkown gateway name: ',gw]);
    end
end
