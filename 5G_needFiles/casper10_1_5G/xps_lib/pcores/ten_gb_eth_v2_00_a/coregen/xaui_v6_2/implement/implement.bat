
@echo off
rmdir /S /Q results
md results
del /Q xaui_v6_2_top.ngc
REM -------------------------------------------------
REM VHDL Design Flow
REM -------------------------------------------------
echo Synthesizing vhdl sample design with XST
xst -ifn xst.scr
copy xaui_v6_2_top.ngc results
REM -------------------------------------------------
REM Copy the netlist generated by Coregen
REM -------------------------------------------------
echo Copy files from the netlist directory to the results directory
cd results
copy ..\..\..\xaui_v6_2.ngc xaui_v6_2.ngc

rem  Copy the constraints files generated by Coregen
echo Copying files from constraints directory to the results directory
copy ..\..\example_design\xaui_v6_2_top.ucf .

echo Running ngdbuild
ngdbuild xaui_v6_2_top

echo Running map
map xaui_v6_2_top -o mapped.ncd

echo Running par
par -n 0 -s 1 -ol high -w mapped.ncd routed.dir mapped.pcf
copy /B routed.dir\*.ncd routed.ncd

echo Running trce
trce -e 10 routed -o routed mapped.pcf

echo Running bitgen
bitgen -w routed

echo Running netgen to create gate level VHDL model
netgen -ofmt vhdl -sim -dir . -tm xaui_v6_2_top -w routed.ncd routed.vhd

REM End of batch file.
REM -------------------------------------------------
